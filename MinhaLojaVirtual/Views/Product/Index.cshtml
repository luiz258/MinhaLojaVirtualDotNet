@{
}


@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
@*     <p>
        Nome do Produto: @Html.TextBox("searchString")
        Categoria: @Html.TextBox("category")
        <input type="submit" value="Filtrar" />
    </p> *@

    <div class="col-md-12" style="margin-top: 20px; margin-bottom:20px">
        <button class="btn btn-info">Criar Produto</button>
    </div>

    <div class="card card-info">
        <div class="card-header">
            <h4 class="card-title">Pesquisar Produto</h4>
        </div>

        <form class="form-horizontal">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label for="name" class="col-lg-2 col-form-label">Nome</label>
                            <div class="col-lg-12">
                                    <input type="text" class="form-control" id="name" placeholder="name">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label for="value" class="col-md-2 col-form-label">Preço</label>
                            <div class="col-md-12">
                                <input type="text" class="form-control" id="value" placeholder="preço">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label for="quantity" class="col-md-5 col-form-label">Quantidade</label>
                            <div class="col-md-12">
                                <input type="text" class="form-control" id="quantity" placeholder="quantidade">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-default float-right">Limpar</button>
                <button type="submit" value="Filtrar" class="btn btn-info">Pesquisar</button>
            </div>
        </form>
    </div>
}


<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12">
        
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Condensed Full Width Table</h3>
                </div>

                <div class="card-body p-0">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Preço</th>
                                <th>Quantidade</th>
                                <th>Descrição</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.name</td>
                                    <td>@product.value</td>
                                    <td>@product.quantity</td>
                                    <td>@product.description</td>
                                    <td>
                                        <button>vizualizar pdf </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
            </div>
        </div>
    

    </div>

</div>