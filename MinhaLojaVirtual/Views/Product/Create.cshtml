@model ProductModel;

@using (Html.BeginForm("Create", "Product", FormMethod.Post))
{
    <div class="card card-info">
        <div class="card-header">
            <h4 class="card-title">Criar Produto</h4>
        </div>

        <form class="form-horizontal">
            <div class="card-body">
                <div class="form-group row">
                    <label for="name" class="col-lg-2 col-form-label">Nome</label>
                    <div class="col-lg-12">
                        @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                    </div>
                </div>
    
                <div class="form-group row">
                    <label for="value" class="col-md-2 col-form-label">Preço</label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.value, new { @class = "form-control" })
                    </div>
                </div>
                
                <div class="form-group row">
                    <label for="quantity" class="col-md-5 col-form-label">Quantidade</label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.quantity, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="quantity" class="col-md-5 col-form-label">Descrição</label>
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.description, new { @class = "form-control" })
                    </div>
                </div>
            </div>
               
            
            <div class="card-footer">
                <button type="submit" class="btn btn-info">Salvar</button>
            </div>
        </form>
    </div>

   
}